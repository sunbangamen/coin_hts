# Frontend Environment Configuration
# Copy this file to .env and update values as needed

# Backend API URL for REST endpoints
VITE_API_URL=http://localhost:8000

# WebSocket URL for real-time updates
VITE_WS_URL=ws://localhost:8001

# Real-time Tickers Configuration
# Enable/disable live ticker updates via WebSocket
# When disabled, the app will use REST API data only (no error messages)
VITE_ENABLE_LIVE_TICKERS=true

# Maximum number of WebSocket reconnection attempts before graceful fallback
VITE_WS_MAX_RETRIES=5

# Docker Environment
# For Docker development, use service names:
# VITE_API_URL=http://backend:8000
# VITE_WS_URL=ws://backend:8001
# VITE_ENABLE_LIVE_TICKERS=true
# VITE_WS_MAX_RETRIES=5

# Development Server
VITE_DEV_PORT=5173
