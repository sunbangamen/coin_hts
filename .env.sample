# Coin Backtesting API - 환경설정 샘플
# 이 파일을 .env로 복사하여 사용하세요

# 데이터 루트 디렉토리
DATA_ROOT=/data

# Redis 설정 (비동기 태스크 큐)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# 실행 환경 (development, staging, production)
ENVIRONMENT=development

# 호스트명 (자동 감지되면 생략 가능)
# HOSTNAME=localhost

# 타임존
TZ=Asia/Seoul

# Python 설정
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# RQ 로그 레벨
RQ_LOG_LEVEL=INFO

# 태스크 결과 보존 기간 (일 단위) - Step 3에서 사용
TASK_RESULT_TTL_DAYS=7
